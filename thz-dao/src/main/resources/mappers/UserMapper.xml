<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thz.dao.UserDao">

    <resultMap type="User" id="UserResult">
        <result property="id" column="id"></result>
        <result property="username" column="username"></result>
        <result property="password" column="password"></result>
        <result property="phone" column="phone"></result>
        <result property="email" column="email"></result>
        <result property="registerTime" column="register_time"></result>
        <result property="status" column="status"></result>
        <result property="registerIp" column="register_ip"></result>
        <result property="loginTime" column="login_time"></result>
    </resultMap>

    <select id="findUserByName" resultMap="UserResult">
        select * from user where username=#{username}
    </select>

    <update id="updateUser" parameterType="User">
        update user set username=#{username},password=#{password},phone=#{phone},
        email=#{email},register_time=#{registerTime},status=#{status},
        register_ip=#{registerIp},login_time=#{loginTime},login_ip=#{loginIp} where id=#{id}
    </update>

    <select id="findUserByPhone" resultMap="UserResult">
        select * from user where phone=#{phone}
    </select>

    <select id="findUserByEmail" resultMap="UserResult">
        select * from user where email=#{email}
    </select>

    <insert id="insertUser" parameterType="User">
        insert into user values(null,#{username},#{password},#{phone},#{email},#{registerTime},
        #{status},#{registerIp},#{loginTime},#{loginIp},#{sex})
    </insert>
</mapper>